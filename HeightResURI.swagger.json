  "paths": {
    "/HeightResURI" : {
      "get": {
        "description": "This Resource describes the properties associated with height of an object's physical size.\nThe Property \"units\" is a single value that is one of m, cm, ft or in.\nIf the \"unit\" Property is missing the default is meters [m].\nThe \"unit\" Property is a read-only value that is provided by the server.\nWhen the Property \"range\" is omitted the default is 0 to +MAXFLOAT.",
        "parameters": [
          {"$ref": "#/parameters/interface"}
        ],
        "responses": {
            "200": {
              "description" : "RETRIEVES height of an object.",
              "x-example":
                {
                  "rt": ["oic.r.height"],
                  "if": ["oic.if.a", "oic.if.baseline"],
                  "height": 1.8,
                  "units": "m"
                },
              "schema": { "$ref": "#/definitions/Height" }
            }
        }
      },
      "post": {
        "description": "Sets the Height.",
        "parameters": [
          {"$ref": "#/parameters/interface"},
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": { "$ref": "#/definitions/Height" },
            "x-example":
              {
                "height": 1.8
              }
          }
        ],
        "responses": {
            "200": {
              "description" : "Indicates that the height was successfully changed.\nThe new height is provided in the response.",
              "x-example":
                {
                  "height": 1.8,
                  "units":   "m"
                },
              "schema": { "$ref": "#/definitions/Height" }
            },
            "403": {
              "description" : "Indicates that OCF client sent an invalid property value to the server.\nThe OCF Server responds with the current resource representation.\n",
              "x-example":
                {
                  "height": 1.8,
                  "units":   "m"
                },
              "schema": { "$ref": "#/definitions/Height" }
            }
        }
      }
    }
  },
