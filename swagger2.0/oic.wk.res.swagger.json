        "responses": {
            "200": {
              "description" : "",
              "x-example":
                [
                  {
                  "rt": ["oic.wk.res"],
                  "if": ["oic.if.baseline", "oic.if.ll" ],
                  "links":
                    [
                      {
                        "href": "/humidity",
                        "rt":   ["oic.r.humidity"],
                        "if":   ["oic.if.s"],
