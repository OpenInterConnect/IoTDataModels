          {
            "$ref": "#/parameters/interface"
          }
        ],
        "responses": {
          "200": {
            "description": "",
            "x-example": {
              "rt": [
                "oic.r.spo2"
              ],
              "spo2": 99.0,
              "perfusion": 20.0
            },
            "schema": {
              "$ref": "#/definitions/SpO2"
            }
          }
        }
      }
    }
  },
  "parameters": {
