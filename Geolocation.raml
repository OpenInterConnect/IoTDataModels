schemas:
  - Geolocation: !include oic.r.sensor.geolocation.json

traits:
  - interface:
      queryParameters:
        if:
          enum: ["oic.if.s"]

/GeolocationResURI:
  description: |
    This resource describes the properties associated with the current geolocation coordinate.
    Geolocation is a geolocation coordinate data.
    Latitude is a device's current Latitude coordinate (degrees).
    Longitude is a device's current Longitude coordinate (degrees).
    Altitude is a devices' current Altitude postion (metres).
    Accuracy is the accuracy level of the latitude and longitude coordinates (metres).
    altitudeAccruracy is ahe accuracy level of the altitude coordinates (metres).
    heading is a direction of travel of device (degree).
    speed is a device's current velocity (metres per second).
  displayName: Geolocation
  is: [ interface ]

  get:
    description: |
      Retrieves the current geolocation coordinates.
    responses:
      200:
        body:
          application/json:
            schema: Geolocation
            example: |
              {
                "rt":         "oic.r.sensor.geolocation",
                "id":         "unique_example_id",
                "latitude":  55.070859,
                "longitude": -3.60512,
                "alt": 12.07,
                "accuracy": 65.0,
                "altitudeAccuracy": 0,
                "heading": 90,
                "speed": 0
              }
  post:
    description: |
      Sets the desired geolocation coordinates.
    body:
      application/json:
        schema: Geolocation
        example: |
          {
            "id": "unique_example_id",
            "latitude":  55.070859,
            "longitude": -3.60512,
            "alt": 12.07
          }
    responses:
      200:
        description: |
          Indicates that the geolocation coordinates was successfully changed.
          The new alt number is provided in the response.
        body:
          application/json:
            schema: Geolocation
            example: |
              {
                "id": "unique_example_id",
                "latitude":  55.070859,
                "longitude": -3.60512,
                "alt": 12.07
              }
      403:
        description: |
          Indicates that OIC client sent an invalid property value to the server.
          The server responds with the required input representation.
        body:
          application/json:
            schema: Geolocation
            example: |
              {
                "id": "unique_example_id",
                "latitude":  55.070859,
                "longitude": -3.60512,
                "alt": 12.07
              }
