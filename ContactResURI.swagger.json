        "parameters": [
          {"$ref": "#/parameters/interface"}
        ],
        "responses": {
            "200": {
              "description": "",
              "x-example":
                {
                  "rt": ["oic.r.sensor.contact"],
                  "if": ["oic.if.s", "oic.if.baseline"],
                  "value": true
                },
              "schema": { "$ref": "#/definitions/Contact" }
            }
        }
      }
    }
  },
  "parameters": {
