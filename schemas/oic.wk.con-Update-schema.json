{
  "id": "https://www.openconnectivity.org/ocf-apis/core/schemas/oic.wk.con-Update-schema.json#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description" : "Copyright (c) 2016 Open Connectivity Foundation, Inc. All rights reserved.",
  "definitions": {
    "oic.wk.con": {
      "type": "object",
      "anyOf": [
        {"required": ["loc"]},
        {"required": ["locn"]},
        {"required": ["c"]},
        {"required": ["r"]},
        {"required": ["ln"]},
        {"required": ["dl"]},
        {"required": ["n"]}
      ],
      "properties": {
        "loc": {
          "type": "array",
          "description": "Location information (lat, long)",
          "items": {
            "type": "number"
          },
          "minItems": 2,
          "maxItems": 2
        },
        "locn": {
          "type": "string",
          "maxLength": 64,
          "description": "Human Friendly Name for location"
        },
        "c": {
          "type": "string",
          "maxLength": 64,
          "description": "Currency"
        },
        "r": {
          "type": "string",
          "maxLength": 64,
          "description": "Region"
        },
        "ln": {
          "type": "array",
          "items" :
            {
              "type": "object",
              "properties": {
                "language": {
                  "allOf": [
                    {
                      "$ref": "oic.types-schema.json#/definitions/language-tag"
                    },
                    {
                      "description": "An RFC 5646 language tag."
                    }
                  ]
                },
                "value": {
                  "type": "string",
                  "maxLength": 64,
                  "description": "The Device name in the indicated language."
                }
              }
            },
          "minItems" : 1,
          "description": "Localized names"
        },
        "dl": {
          "allOf": [
            {
              "$ref": "oic.types-schema.json#/definitions/language-tag"
            },
            {
              "description": "Default Language as an RFC 5646 language tag."
            }
          ]
        }
      }
    }
  },
  "type": "object",
  "allOf": [
    { "$ref": "oic.core-schema.rw.json#/definitions/oic.core"},
    { "$ref": "#/definitions/oic.wk.con" }
  ]
}
