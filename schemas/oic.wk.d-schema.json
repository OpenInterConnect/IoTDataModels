          "format": "uuid"
        },
        "icv": {
          "type": "string",
          "description": "ReadOnly, The version of the OIC Server"
        },
        "dmv": {
          "type": "string",
          "description": "ReadOnly, The spec version of the vertical specification",
          "format": "csv"
        }
      }
    }
