schemas:
  - GSR: !include oic.r.gsr.json

traits:
  - interface:
      queryParameters:
        if:
          enum: ["oic.if.s", "oic.if.baseline"]

/GSRResURI:
  description: |
    This resource describes the properties associated with GSR(Galvanic Skin Response).
    SkinConductance is the value of skin conductance in μS(micro siemens).
    SkinResistance is the value of skin resistance in Ω (ohm).
    SkinConductanceVoltage is the the value of skin conductance in voltage.
  displayName: GSR
  is: [ interface ]

  get:
    description: |
      Retrieves the current datetime data.
    responses:
      200:
        body:
          application/json:
            schema: GSR
            example: |
              {
                "rt":         ["oic.r.gsr"],
                "id":         "unique_example_id",
                "skincon":  100,
                "skinres": 30,
                "skincv": 0.2,
                "observedtime": "2016-02-15T09:19Z"
              }
