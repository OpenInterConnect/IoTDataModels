/CyclingComputerResURI:
  description: |
    This resource describes the properties associated with CyclingComputer.
    biketime is the value of accumulated time using bike.
    Laptime is freezed elapsed time.
    The resource is a composite resource being made up as a collection of:
      Clock
      Cycling Power
      Cycling Speed Cadence
      Altimeter
      HeartRate
      Speed
      Distance
  displayName: CyclingComputer
  is: [ interface ]

  get:
    description: |
      Retrieves the current datetime data.
    responses:
      200:
        body:
          application/json:
            schema: CyclingComputer
            example: |
              {
                "rt":         ["oic.r.cycling.computer"],
                "id":         "unique_example_id",
                "biketime":  "00:10",
                "c-time": {
                  "datetime": "2016-03-15T14:30Z"
                  },
                "laptime": "14:30:10",
                "c-power": {
                  "power": 50,
                  "FTP": 60
                  },
                "c-cadence": {
                  "cadence":  100,
                  "speed": 50,
                  "units": "km/h"
                  },
                "c-alt": {
                  "alt": 1500
                  },
                "c-hr": {
                  "heartrate":  81
                  },
                "c-distance": {
                  "distance":  10,
                  "units": "mile"
                  }
              }
  post:
    description: |
      Sets the desired value.
    body:
      application/json:
        schema: CyclingComputer
        example: |
          {
            "id":     "unique_example_id",
            "biketime":  "00:10",
            "c-time": {
              "datetime": "2016-03-15T14:30Z"
              },
            "laptime": "14:30:10",
            "c-power": {
