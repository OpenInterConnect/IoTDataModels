        },
        "if": {
          "description": "The OCF Interface set supported by this Resource",
          "items": {
            "enum": ["oic.if.rw","oic.if.baseline"],
            "type": "string"
          },
          "minItems": 1,
          "uniqueItems": true,
          "readOnly": true,
          "type": "array"
        }
      },
      "type": "object",
      "required": ["title", "mimetype", "mediafile"]
    },
