          {"$ref": "#/parameters/interface"}
        ],
        "responses": {
            "200": {
              "description" : "",
              "x-example":
                {
                  "rt": ["oic.r.colour.rgb"],
                  "if": ["oic.if.a", "oic.if.baseline"],
                  "rgbValue": [255, 255, 255],
                  "range": [0, 255]
                },
              "schema": { "$ref": "#/definitions/ColourRGB" }
            }
        }
      },
      "post": {
        "description": "Sets the current colourRGB value\n",
        "parameters": [
          {"$ref": "#/parameters/interface"},
          {
            "name": "body",
