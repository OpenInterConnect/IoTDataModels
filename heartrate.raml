schemas:
  - HeartRate: !include oic.r.heartrate.json

traits:
  - interface:
      queryParameters:
        if:
          enum: ["oic.if.s", "oic.if.baseline"]

/HeartRateResURI:
  description: |
    This resource describes the properties associated with heart rate.
    Heart Rate (heartrate) is a person's heart rate in bpm.
  displayName: Heart rate
  is: [ interface ]

  get:
    description: |
      Retrieves the current heart rate.
    responses:
      200:
        body:
          application/json:
            schema: HeartRate
            example: |
              {
                "rt":        ["oic.r.heartrate"],
                "id":        "unique_example_id",
                "heartrate": 81,
                "observedtime": "2016-02-15T09:19Z"
              }
