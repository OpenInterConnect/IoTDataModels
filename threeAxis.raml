schemas:
  - threeAxis: !include oic.r.sensor.threeaxis.json
traits:
  - interface:
      queryParameters:
        if:
          enum: ["oic.if.s","oic.if.baseline"]

/ThreeAxisResURI:
  description: |
    This resource provides a representation of the measurement from a three-axis sensor.
    The orientation is an array of numbers representing x-plane, y-plane and z-plane values.
    The unit of measurement for each pane is 'g'.

  displayName: Three Axis Sensor
  is: [ interface ] # valid for all methods

  get:
    responses:
      200:
        body:
          application/json:
            schema: threeAxis
            example: |
              {
                "rt":           ["oic.r.sensor.threeaxis"],
                "id":           "unique_example_id",
                "orientation":  [0.7, 1.1, -0.2]
              }
