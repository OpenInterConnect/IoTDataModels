              "schema": { "$ref": "#/definitions/AirFlowControlBatch" }
            },
            "403": {
              "description" : "This response is generated by the OIC Server when the client sends:\n  An update with an invalid property value for direction.\n  An update with an out of range property value for speed.\nThe server responds with the current resource representation.\n",
              "x-example":
